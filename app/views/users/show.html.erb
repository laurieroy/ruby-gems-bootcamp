<div class="card">
  <div class="card-body">
    <strong>Id:</strong>
    <%= link_to @user.id, user_path(@user) %>
    <br >
    <strong>Email:</strong>
    <%= @user.email %>
    <br >
    <strong>Confirmed:</strong>
    <%= boolean_label( @user.confirmed? )  %>
    <br />
    <strong><%= 'sign_in_count'.humanize %>: </strong>
    <%= @user.sign_in_count %>
    <br />
    <strong><%= 'sign_in_at'.humanize %>: </strong>
    <%=  @user.current_sign_in_at %>
    <br />
    <strong><%= 'last_sign_in'.humanize %>: </strong>
    <%=  @user.last_sign_in_at %>
    <br />
    <strong><%= 'current_sign_in_ip'.humanize %>: </strong>
    <%=  @user.current_sign_in_ip %>
    <br />
    <strong><%= 'last_sign_in_ip'.humanize %>: </strong>
    <%=  @user.last_sign_in_ip %>
    <br>
    <strong><%= 'locked_at'.humanize %>: </strong>
    <%=  @user.locked_at %>
    <br>
    <strong><%= 'name'.humanize %>: </strong>
    <%=  @user.name %>
    <br>
    <strong><%= 'provider'.humanize %>: </strong>
    <%=  @user.provider %>
    <br>
    <strong><%= 'image'.humanize %>: </strong>
    <% if @user.image.present? %>
      <%= image_tag @user.image, size: "50x50" %>
    <% end %>
    <br>
    <strong><%= 'uid'.humanize %>: </strong>
    <%=  @user.uid %>
    <br>
    <strong><%= 'roles'.humanize %>: </strong>
    <%=  @user.active_roles.join(",") %>
    <br>
    <% if current_user.admin? %>
      <div class="card-footer mt-3">
        <%= link_to "Edit roles", edit_user_path(@user), class: "btn btn-sm btn-outline-warning"  %>
        <%= link_to ban_stauts(@user), ban_user_path(@user), method: :patch, class: "btn btn-sm btn-warning"  %>
        <%= link_to "Delete", @user, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger"  %>
      </div>
    <% end %>

  </div>
</div>

<div class="card-footer">
  <%= link_to "All Users", users_path %>
</div>
